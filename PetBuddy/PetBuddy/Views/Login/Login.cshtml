@using PetBuddy.Models
@using Microsoft.AspNetCore.Identity
@model PetBuddy.Viewmodels.LoginViewModel
@inject SignInManager<User> SignInManager

<section class="login-block">
    <div class="container">
        <div class="row">
            <div class="col-md-4 login-sec">
                <h2 class="text-center">Login Now</h2>
                <form asp-controller="Login" asp-action="Login" class="login-form">
                    @if (Model.ErrorMessages != null)
                    {
                        @foreach (var error in Model.ErrorMessages)
                        {
                            <span class="text-danger">@error</span>
                        }
                    }
                <div class="form-group">
                    <label asp-for="Email" class="text-uppercase">Email</label>
                    <input asp-for="Email" class="form-control">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                    <div class="form-group">
                        <label asp-for="Password" class="text-uppercase">Password</label>
                        <input asp-for="Password" class="form-control" >
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-check">
                        <button asp-controller="Login" asp-action="Login" type="submit" class="btn btn-login float-right">Submit</button>
                    </div>
                </form>
            </div>
            <div class="col-md-8 banner-sec">
            </div>
        </div>
    </div>
</section>
